# Groupe-4
#include <stdio.h>

#define N 10

/*Fonction Appartient*/
/*Détermine si x appartient au tableau T1*/
void appartient_gr_04(int x, int *T1, int s1, int n1)
{
int inf=0, sup=n1-1, pos=-1, m;
	while((inf<=sup) && pos==-1)
	{
		m=(sup+inf)/2;
		if(x<T1[m])
			sup=m-1;
		else if(x>T1[m])
			inf=m+1;
		else if(T1[m] == x) 
        {
            pos=m;
            printf("Trouve\n");
		}
	}
    if(T1[m] != x) printf("x n'est pas dans T1\n");
}

/*Fonction Inclus*/
/*Détermine si T1 est inclus dans T2 ou inversement*/
void inclus_gr_04(int *T1, int s1, int n1, int *T2, int s2, int n2)
{
    if(n2> n1) {
        int inf=0, sup=n2-1, pos=-1, m, nbElementTrouve=0, x=0;
        for (x=0; x <= n1-1; x++) 
        {
            inf=0, sup=n2-1, pos=-1;
            while((inf<=sup) && pos==-1)
            {
                m=(sup+inf)/2;
                if(T1[x]<T2[m])
                    sup=m-1; 
                else if(T1[x]>T2[m])
                    inf=m+1;
                else if(T2[m] == T1[x]) 
                {
                    pos=m;
                    nbElementTrouve++;
                }
            }
        }
        if(nbElementTrouve == n1) printf("T1 inclus dans T2\n");
    } 
    else
    {
        int inf=0, sup=n2-1, pos=-1, m, nbElementTrouve=0, x=0;
        for (x=0; x <= n2-1; x++) 
        {
            inf=0, sup=n1-1, pos=-1;
            while((inf<=sup) && pos==-1)
            {
                m=(sup+inf)/2;
                if(T2[x]<T1[m])
                    sup=m-1; 
                else if(T2[x]>T1[m])
                    inf=m+1;
                else if(T1[m] == T2[x]) 
                {
                    pos=m;
                    nbElementTrouve++;
                }
            }
        }
        if(nbElementTrouve == n2) printf("T2 inclus dans T1\n");
    }


}

/*Fonction Inter*/
/*Calcul dans un tableau T3 la fonction mathématique intersection entre T1 et T2*/
void inter_gr_04(int *T1, int s1, int n1, int *T2, int s2, int n2, int *T3, int s3, int *n3)
{
    int k=0, i=0;
    if(n1 >= n2) 
    {
        int inf=0, sup=n1-1, pos=-1, m, x=0;
        for (x=0; x <= n2-1; x++) 
        {
            inf=0, sup=n1-1, pos=-1;
            while((inf<=sup) && pos==-1)
            {
                m=(sup+inf)/2;
                if(T2[x]<T1[m])
                    sup=m-1; 
                else if(T2[x]>T1[m])
                    inf=m+1;
                else if(T1[m] == T2[x]) 
                {
                    pos=m;
                    T3[i] = T2[x];
                    i++;
                }
            }
        }
    } else {

        int inf=0, sup=n2-1, pos=-1, m, x=0;
        for (x=0; x <= n1-1; x++) 
        {
            inf=0, sup=n2-1, pos=-1;
            while((inf<=sup) && pos==-1)
            {
                m=(sup+inf)/2;
                if(T1[x]<T2[m])
                    sup=m-1; 
                else if(T1[x]>T2[m])
                    inf=m+1;
                else if(T2[m] == T1[x]) 
                {
                    pos=m;
                    T3[i] = T1[x];
                    i++;
                }

            }
        }
    }
    for(k=0; k<i; k++)
	{
		printf("%i ", T3[k]);
	}
    printf("\n");

}

/*Fonction Union*/
/*Calcul dans un tableau T3 la fonction mathématique union entre T1 et T2*/
void union_gr_04(int *T1, int s1, int n1, int *T2, int s2, int n2, int *T3, int s3, int *n3)
{
    int k=0, i=0,j=0;
    int x=0;
    int estPasContenu=1;
    if(n1 >= n2) {
        for(j=0; j<=n1-1; j++) 
        {
            T3[i] = T1[j];
            i++;
        }
        for(x=0; x<n2; x++) 
        {
            estPasContenu=0;
            j=0;
            while(j<n1 && estPasContenu==0) 
            {
                if (T2[x] == T1[j]) estPasContenu=1;
                j++;
            }
            if (estPasContenu == 0) 
            {
                T3[i]= T2[x];
                i++;
            }

        }
    } 
    else
    {
        for(j=0; j<=n2-1; j++) 
        {
            T3[i] = T2[j];
            i++;
        }
        for(x=0; x<n1; x++) 
        {
            estPasContenu=0;
            j=0;
            while(j<n2 && estPasContenu==0) 
            {
                if (T1[x] == T2[j]) estPasContenu=1;
                j++;
            }
            if (estPasContenu == 0) 
            {
                T3[i]= T1[x];
                i++;
            }

        }
    }

/* Tri du tableau T3*/    
    int bmax=i;
	int v;
	while(bmax>=0)
	{
		for(v=0; v<=bmax; v++)
		{
			if(T3[v]>T3[v+1])
			{
				k=T3[v];
				T3[v]=T3[v+1];
				T3[v+1]=k;
			}
		}
		bmax=bmax-1;
	}
    for(k=0; k<i; k++)
	{
		printf("%i ", T3[k]);
	}
    printf("\n");

}

int main(void)
{
	int T2[N]={1,2,40,42,68};
    int T1[N]={1,2,40,42,68,71,102,265,365,450};
    int T3[2*N];
    int i;
	appartient_gr_04(2, T1, N, 10);
	inclus_gr_04(T1, N, 10, T2, N, 5);
    inter_gr_04(T1, N, 10, T2, N, 5, T3, 2* N, 0);
	union_gr_04(T1, N, 10, T2, N, 5, T3, 2* N, 0);
	printf("\n");
	return 0;
}
